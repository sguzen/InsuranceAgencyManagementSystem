{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=IAMS_Main;Trusted_Connection=true;MultipleActiveResultSets=true;",
    "IntegrationConnection": "Server=(localdb)\\mssqllocaldb;Database=IAMS_Integration;Trusted_Connection=true;MultipleActiveResultSets=true;"
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "your-email@gmail.com",
    "FromName": "IAMS Insurance Agency",
    "AgencyName": "IAMS Sigorta Acentesi",
    "ContactPhone": "+90 392 XXX XXXX",
    "ContactEmail": "info@iams-agency.com"
  },
  "FileStorage": {
    "Type": "local",
    "LocalPath": "C:\\IAMS\\Files",
    "BaseUrl": "/files",
    "AzureStorage": {
      "ConnectionString": "your-azure-storage-connection-string",
      "ContainerName": "iams-files"
    }
  },
  "Modules": {
    "Reporting": true,
    "Accounting": false,
    "Integration": false,
    "Claims": true,
    "Policies": true,
    "Customers": true
  },
  "IntegrationProviders": [
    {
      "Name": "axa-turkey",
      "DisplayName": "AXA Türkiye",
      "IsEnabled": false,
      "Settings": {
        "BaseUrl": "https://api.axa.com.tr",
        "AuthType": "bearer",
        "Token": "your-api-token",
        "TimeoutSeconds": "30",
        "TestEndpoint": "/api/health",
        "CustomerSyncEndpoint": "/api/customers/sync",
        "PolicySyncEndpoint": "/api/policies/sync",
        "ClaimSubmissionEndpoint": "/api/claims/submit"
      }
    },
    {
      "Name": "allianz-turkey",
      "DisplayName": "Allianz Türkiye",
      "IsEnabled": false,
      "Settings": {
        "BaseUrl": "https://api.allianz.com.tr",
        "AuthType": "apikey",
        "ApiKey": "your-api-key",
        "ApiKeyHeader": "X-API-Key",
        "TimeoutSeconds": "45",
        "TestEndpoint": "/api/status",
        "CustomerSyncEndpoint": "/api/v1/customers",
        "PolicySyncEndpoint": "/api/v1/policies",
        "ClaimSubmissionEndpoint": "/api/v1/claims"
      }
    },
    {
      "Name": "mapfre-turkey",
      "DisplayName": "MAPFRE Türkiye",
      "IsEnabled": false,
      "Settings": {
        "BaseUrl": "https://partner.mapfre.com.tr",
        "AuthType": "bearer",
        "Token": "your-mapfre-token",
        "TimeoutSeconds": "60",
        "TestEndpoint": "/health",
        "CustomerSyncEndpoint": "/partners/customers",
        "PolicySyncEndpoint": "/partners/policies",
        "ClaimSubmissionEndpoint": "/partners/claims"
      }
    }
  ],
  "BackgroundServices": {
    "PolicyReminder": {
      "Enabled": true,
      "IntervalHours": 24
    },
    "IntegrationSync": {
      "Enabled": true,
      "IntervalHours": 6
    },
    "ReportScheduler": {
      "Enabled": true,
      "IntervalHours": 1
    },
    "ClaimProcessing": {
      "Enabled": true,
      "IntervalHours": 2
    },
    "DataCleanup": {
      "Enabled": true,
      "RunTime": "02:00"
    },
    "Backup": {
      "Enabled": true,
      "RunDay": "Sunday",
      "RunTime": "03:00"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "IAMS.Infrastructure": "Information"
    }
  }
}